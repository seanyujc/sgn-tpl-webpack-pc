{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node",
      "angular",
      "angular-ui-bootstrap",
      "jquery"
    ],
    "outDir": "./bundles"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "bundles",
    "dts"
  ]
}